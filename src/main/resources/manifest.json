{
  "manifest_version": 2,

  "name": "Crawl Music Extension",
  "description": "This extension allows the user to change the background color of the current page.",
  "version": "1.0.1",

  "browser_action": {
    "default_icon": "com.crawlmb.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "storage",
    "background"
  ],
  "background": {
    "page": "background.html"
  }
}
